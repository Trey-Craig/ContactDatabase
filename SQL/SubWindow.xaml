<Window x:Name="Manage_Records" x:Class="SQL.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL"
        mc:Ignorable="d"
        Title="Manage Records" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="709*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Delete Selected" HorizontalAlignment="Left" VerticalAlignment="Top" Width="234" Margin="75,26,0,0" Height="33" Click="Delete_Record"/>
        <Button Content="Delete All" HorizontalAlignment="Left" VerticalAlignment="Top" Width="234" Margin="75,73,0,0" Height="37" Click="Restore_Record"/>
        <Button Content="Restore Selected" HorizontalAlignment="Left" VerticalAlignment="Top" Width="234" Margin="75,129,0,0" Height="35" Click="Restore_Record"/>
        <Button Content="Restore All" HorizontalAlignment="Left" VerticalAlignment="Top" Width="234" Margin="75,183,0,0" Height="31" Click="Restore_All"/>
        <ComboBox x:Name="cmbobox" HorizontalAlignment="Left" Margin="75,235,0,0" VerticalAlignment="Top" Width="234"/>

    </Grid>
</Window>
